extends ../layouts/patternsLibrary

block content
  
  .container
    .row
      .col-xs-12
        h2 Hero Section
        
        .carousel#carousel
          - var n = 1
          while n < 5
            .carousel-cell
              .carousel-text
                h2.carousel-h Being Smart Chef Every Day
                p.carousel-sub-h 10 Recipes every week updates
                a.btn(href="#") See all Recipes
              img(src="/images/carousel/#{n++}.jpg", alt="Food")
              
        h3 Carousel Sync
        
        .carousel-for#carouselFor.mbm
          - var n = 1
          while n < 6
            div: img(src="http://placehold.it/600x400", alt="Food#{n++}")
        
        .carousel-nav#carouselNav
          - var n = 1
          while n < 6
            div: img(src="http://placehold.it/100x100", alt="Food#{n++}")
