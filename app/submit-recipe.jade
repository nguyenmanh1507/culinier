extend layouts/default

block content
  - var txtEditor = true

  .banner.banner--bg-a
    h2.banner__h Submit Your Recipes
    
    //- patterns_library/breadcrumb
    .bc
      a.bc__item(href="#") Home
      span.bc__item Recipes
    
    .banner__cover
    
  .well
    .container
      .row
        .col-sm-12.col-md-8
          .page-header.mbm
            h3 Welcome back, Recipe Contributor!
            p.txt-light
              | This is text your users will see when you're logged in. You can of course change it to whatever you'd like using the Settings panel. It includes an optional token to display the logged in user's display name whenever you need to.
              
          form.form(action="").mbl
            .row
              .col-sm-12.col-md-6
                .form__group
                  label(for="field1") Recipe Title
                  input.form__control#field1(type="text", name="field1")
                  small Keep it short and descriptive
                
              .col-sm-12.col-md-6
                .form__group
                  label(for="field2") Recipe Image
                  input.form__control#field1(type="file", name="field2")
                  small Recommend size: 600x400 px
                  
            .row
              .col-sm-12
                .form__group
                  label(for="field3") Recipe Video
                  input.form__control#field3(type="url")
                  small
                    | <span class="text-bold text-uppercase">Optional</span>: If you have recipe video on Youtube, Vimeo, or any of the other supported Embed sites, then you'll want to use the field above. Just paste in the URL (ex: http://youtu.be/abacdedc) and it will show up as a popup by clicking the recipe image.
                    
            .form__sep
            
            .row
              .col-sm-12
                .form__group
                  label(for="field9") Cooking time
                  input.form__control#field9(type="text")
              
              .col-sm-12.col-md-6
                .form__group
                  label(for="field4") Difficulty level
                  select.form__control#field4
                    option(value="1") Easy
                    option(value="2") Medium
                    option(value="3") Hard
                    option(value="4") Master
                
              .col-sm-12.col-md-6
                .form__group
                  label(for="field5") Recipe Category
                  select.form__control#field5
                    option(value="1") Foods
                    option(value="2") Medium
                    option(value="3") Hard
                    option(value="4") Master
              
              .col-sm-12.col-md-6
                .form__group
                  label(for="field6") Cooking method
                  select.form__control#field6
                    option(value="1") Fries
                    option(value="2") Medium
                    option(value="3") Hard
                    option(value="4") Master
                    
              .col-sm-12.col-md-6
                .form__group
                  label(for="field7") Cuisine
                  select.form__control#field7
                    option(value="1") Asia
                    option(value="2") Medium
                    option(value="3") Hard
                    option(value="4") Master
                    
            .form__sep
            
            .row
              .col-sm-12
                .form__group
                  label(for="field8") Description
                  textarea.form__control#field8(cols="20", rows="7")
                  
            .form__sep
            
            .row    
              .col-sm-12
                  .row
                    .col-sm-12
                      .form__group
                        label Nutrition
                        .form__input-group
                          select.form__control.form__input-addon(name="nutrition")
                            option(value="1") Calories
                            option(value="2") Cholesterol
                            option(value="3") Carbohydrates
                            option(value="4") Fat
                            option(value="5") Protein
                          input.form__control(type="text")
                          button.btn.btn--e: i.fa.fa-close
                          
                        .form__input-group
                          select.form__control.form__input-addon(name="nutrition")
                            option(value="1") Calories
                            option(value="2") Cholesterol
                            option(value="3") Carbohydrates
                            option(value="4") Fat
                            option(value="5") Protein
                          input.form__control(type="text")
                          button.btn.btn--e: i.fa.fa-close
                          
                        button.btn.btn--w Add more
                        
            .form__sep
            
            .row  
              .col-sm-12
                .form__group
                  label(for="field11") Ingredients
                  .form__input-group
                    input.form__control(type="text")
                    button.btn.btn--e: i.fa.fa-close
                  .form__input-group
                    input.form__control(type="text")
                    button.btn.btn--e: i.fa.fa-close
                  
                  button.btn.btn--w Add more
                  
            .form__sep
              
            .row
              .col-sm-12
                .form__group
                  label(for="direction") Direction
                  textarea.form__control#direction(cols="20", rows="7")
                  
            button.btn.btn--w(type="submit") Submit Recipe
          
        .col-sm-12.col-md-4
          include includes/sidebar
